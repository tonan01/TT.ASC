@model IEnumerable<TT.DoAn.ViewModel.InChiTietPhieuThu>

@{
    ViewBag.Title = "InPhieuThu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md">
                <strong class="text-uppercase text-danger">Phiếu Thu</strong>
            </div>

            <div class="col-md" style="text-align:center">
                <p>Mã số sinh viên: @ViewBag.MS</p>
                <p>Họ Tên: @ViewBag.HT</p>
            </div>

            <div class="col-md" style="text-align:end">
                <a href="@Url.Action("ExportPDF", "Home", new {@pSoPhieu=ViewBag.SP} )" class="btn btn-sm btn-success"><i class="fa-sharp fa-solid fa-arrow-left"></i> IN</a>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <table class="table table-bordered table-hover">
            <thead style="color:white">
                <tr style="background-color:#6610f2">
                    <th style="width:20px" class="text-center">
                       STT
                    </th>
                    <th class="text-center">
                        Mã Môn Học
                    </th>
                    <th class="text-center">
                        Nội dung
                    </th>
                    <th class="text-center">
                        Đơn Giá
                    </th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.STT)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaMH)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NoiDung)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DonGia)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
